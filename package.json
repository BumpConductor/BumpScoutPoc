{
  "name": "BumpScout",
  "version": "1.0.0",
  "description": "Collect bumps",
  "main": "lib/index.js",
  "config": {
    "profile": "local",
    "polymer_test_skip": "sauce"
  },
  "scripts": {
    "bower": "bower",
    "bower:install": "npm run bower -- install",
    "config": "cross-conf-env mustache config/$npm_package_config_profile.json app/config.js.mustache > app/config.js",
    "app:lint": "eslint app",
    "app:test": "cross-env BABEL_ENV=test nyc mocha --opts app.mocha.opts",
    "app:coverage": "nyc report -r text && nyc check-coverage",
    "app:build": "webpack",
    "app:build:watch": "webpack --watch",
    "ui:lint": "eslint ui",
    "ui:test": "cross-conf-env polymer test --skip-plugin $npm_package_config_polymer_test_skip",
    "ui:serve": "polymer serve --hostname 0.0.0.0",
    "ui:build": "polymer build",
    "firebase:rules": "cross-conf-env mustache config/$npm_package_config_profile.json rules/storage.rules.mustache > rules/storage.rules",
    "firebase:id": "cross-conf-env mustache config/$npm_package_config_profile.json .firebaserc.mustache > .firebaserc",
    "firebase:deploy": "firebase deploy",
    "do:config": "run-s --silent config",
    "do:app": "run-s --silent app:lint app:test app:coverage",
    "do:ui": "run-s --silent ui:lint ui:test",
    "watch:config": "cross-conf-env chokidar config/$npm_package_config_profile.json app/config.js.mustache -c \"npm run -s do:config\"",
    "watch:app": "chokidar \"app/+(src|test)/**/*\" \"node_modules/!(.cache)/**/*\" -c \"npm run -s do:app\"",
    "watch:ui": "chokidar \"bower_components/**/*\" \"ui/+(src|test|app)/**/*\" -c \"npm run -s do:ui\"",
    "alarmist:config": "cross-conf-env chokidar config/$npm_package_config_profile.json app/config.js.mustache -c \"alarmist-npm config\"",
    "alarmist:app:lint": "chokidar \"app/+(src|test)/**/*\" -c \"alarmist-npm app:lint\"",
    "alarmist:app:test": "chokidar \"app/+(src|test)/**/*\" \"node_modules/!(.cache)/**/*\" -c \"alarmist-npm app:test\"",
    "alarmist:app:coverage": "chokidar \"app/coverage/lcov.info\" -c \"alarmist-npm app:coverage\"",
    "alarmist:app:build": "alarmist-webpack -n app:build",
    "alarmist:ui:lint": "chokidar \"ui/+(src|test)/**/*\" -c \"alarmist-npm ui:lint\"",
    "alarmist:ui:test": "chokidar \"bower_components/**/*\" \"ui/+(src|test|app)/**/*\" -c \"alarmist-npm ui:test\"",
    "alarmist:ui:build": "chokidar \"bower_components/**/*\" \"ui/+(src|test|app)/**/*\" -c \"alarmist-npm ui:build\"",
    "start": "alarmist-monitor run-p ui:serve alarmist:config alarmist:app:lint alarmist:app:test alarmist:app:coverage alarmist:app:build alarmist:ui:lint alarmist:ui:test alarmist:ui:build",
    "watch": "run-p watch:config ui:serve app:build:watch watch:app watch:ui",
    "init": "run-s config app:build bower:install",
    "test": "run-s init app:lint app:test app:coverage ui:lint ui:test",
    "build": "run-s test ui:build",
    "deploy": "run-s firebase:rules firebase:id firebase:deploy",
    "coveralls": "cat ./app/coverage/lcov.info | coveralls",
    "wct:start": "wct --persistent --skip-plugin sauce ui/test/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BumpConductor/BumpScout.git"
  },
  "keywords": [],
  "author": "Peter Halliday <pghalliday@gmail.com> (http://pghalliday.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BumpConductor/BumpScout/issues"
  },
  "homepage": "https://github.com/BumpConductor/BumpScout#readme",
  "devDependencies": {
    "alarmist": "^1.0.12",
    "alarmist-npm": "^1.0.0",
    "alarmist-webpack": "^1.0.9",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-env": "^1.1.8",
    "bower": "^1.8.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.15",
    "cross-conf-env": "^1.1.2",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-html": "^2.0.0",
    "firebase-bolt": "^0.8.2",
    "firebase-tools": "^3.2.2",
    "mocha": "^3.2.0",
    "mustache": "^2.3.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.1.2",
    "polymer-cli": "^0.17.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "sinon-chai-in-order": "^0.1.0",
    "web-component-tester-istanbul": "^0.10.0",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "firebase": "^3.6.8",
    "lodash": "^4.17.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.5.4"
  }
}
